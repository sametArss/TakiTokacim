@{
    ViewData["Title"] = "İletişim";
}
@model EntitiyLayer.Models.Contact
@if (TempData["ContactInfo"] != null) {
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["ContactInfo"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg p-4">
            <h2 class="fw-bold mb-4" style="color:#e67e22;">İletişim</h2>
            <form asp-action="Contact" method="post" autocomplete="off">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Ad Soyad</label>
                        <input asp-for="UserNameLName" class="form-control" placeholder="Adınız Soyadınız">
                        <span asp-validation-for="UserNameLName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">E-posta</label>
                        <input asp-for="UserMail" class="form-control" placeholder="E-posta adresiniz">
                        <span asp-validation-for="UserMail" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Mesajınız</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Mesajınızı yazınız..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning px-5" style="background:#e67e22; border:none;">Gönder</button>
            </form>
            <div class="mt-4">
                <h5 class="fw-bold" style="color:#e67e22;">İletişim Bilgileri</h5>
                <p class="mb-1"><strong>E-posta:</strong> info@takitokacim.com</p>
                <p class="mb-1"><strong>Telefon:</strong> 0 (555) 123 45 67</p>
                <p><strong>Adres:</strong> İstanbul, Türkiye</p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 