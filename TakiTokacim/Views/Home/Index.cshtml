@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (TempData["LogoutInfo"] != null) {
    <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
        @TempData["LogoutInfo"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="hero-banner p-5 mb-4 bg-light rounded-3 text-center shadow-sm">
    <h1 class="display-3 fw-bold" style="color:#e67e22;">TakiTokacim'a Hoş Geldiniz!</h1>
    <p class="lead mt-3 mb-4">En şık takılar, en uygun fiyatlarla. Kendi tarzını keşfet, hemen alışverişe başla!</p>
    <a href="/Products" class="btn btn-lg btn-warning px-5 py-2 fw-bold" style="background:#e67e22; border:none;">Alışverişe Başla</a>
</div>

<div class="row text-center mb-5">
    <h2 class="mb-4 fw-bold" style="color:#e67e22;">Kategoriler</h2>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <img src="https://img.icons8.com/ios-filled/50/000000/diamond.png" alt="Yüzük" class="mb-2" style="width:40px;">
                <h5 class="card-title">Yüzükler</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <img src="https://img.icons8.com/ios-filled/50/000000/necklace.png" alt="Kolye" class="mb-2" style="width:40px;">
                <h5 class="card-title">Kolyeler</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <img src="https://img.icons8.com/ios-filled/50/000000/bracelet.png" alt="Bileklik" class="mb-2" style="width:40px;">
                <h5 class="card-title">Bileklikler</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <img src="https://img.icons8.com/ios-filled/50/000000/earrings.png" alt="Küpe" class="mb-2" style="width:40px;">
                <h5 class="card-title">Küpeler</h5>
            </div>
        </div>
    </div>
</div>

<div class="mb-5">
    <h2 class="mb-4 fw-bold text-center" style="color:#e67e22;">Öne Çıkan Ürünler</h2>
    <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Ürün 1">
                <div class="card-body">
                    <h5 class="card-title">Zarif Altın Yüzük</h5>
                    <p class="card-text">Şıklığın tamamlayıcısı, modern tasarım.</p>
                    <a href="#" class="btn btn-outline-warning w-100">İncele</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Ürün 2">
                <div class="card-body">
                    <h5 class="card-title">İnci Kolye</h5>
                    <p class="card-text">Zarif ve klasik bir görünüm.</p>
                    <a href="#" class="btn btn-outline-warning w-100">İncele</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Ürün 3">
                <div class="card-body">
                    <h5 class="card-title">Taşlı Bileklik</h5>
                    <p class="card-text">Her stile uygun, göz alıcı detaylar.</p>
                    <a href="#" class="btn btn-outline-warning w-100">İncele</a>
                </div>
            </div>
        </div>
    </div>
</div>
