@model EntitiyLayer.Models.Product
@{
    ViewData["Title"] = "Ürün Sil";
}
<div class="container mt-4">
    <h2>Ürün Sil</h2>
    <div class="alert alert-warning">Bu ürünü silmek istediğinize emin misiniz?</div>
    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>
        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.ProductPrice ₺</dd>
        <dt class="col-sm-2">Stok</dt>
        <dd class="col-sm-10">@Model.ProductStock</dd>
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if(Model.ProductStatus) { <span class="badge bg-success">Aktif</span> } else { <span class="badge bg-danger">Pasif</span> }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>
    </form>
</div> 