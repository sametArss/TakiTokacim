@model IEnumerable<EntitiyLayer.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
}
<div class="container mt-4">
    <h2 class="mb-4">Kategoriler</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <a class="btn btn-primary mb-3" asp-action="Create">+ Yeni Kategori Ekle</a>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Adı</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>
                    @if(item.CategoryStatus) { <span class="badge bg-success">Aktif</span> } else { <span class="badge bg-danger">Pasif</span> }
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 