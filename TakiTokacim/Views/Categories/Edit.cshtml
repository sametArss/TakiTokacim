@model EntitiyLayer.Models.Category
@{
    ViewData["Title"] = "Kategori Düzenle";
}
<div class="container mt-4">
    <h2>Kategori Düzenle</h2>
   

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="CategoryId" />
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryDescription" class="form-label"></label>
            <textarea asp-for="CategoryDescription" class="form-control"></textarea>
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryStatus" class="form-label">Durum</label>
            <select asp-for="CategoryStatus" class="form-select">
                <option value="true">Aktif</option>
                <option value="false">Pasif</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 