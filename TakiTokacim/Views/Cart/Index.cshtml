@model List<dynamic>
@{
    ViewData["Title"] = "Sepetim";
    var total = Model.Sum(item => (int)item.Price * (int)item.Quantity);
}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg p-4">
            <h2 class="fw-bold mb-4" style="color:#e67e22;">Sepetim</h2>
            @if (Model.Count == 0)
            {
                <div class="alert alert-warning">Sepetinizde ürün yok.</div>
            }
            else
            {
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price TL</td>
                                <td>@((int)item.Price * (int)item.Quantity) TL</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="fw-bold" style="font-size:1.2rem; color:#e67e22;">Toplam: @total TL</div>
                    <a href="#" class="btn btn-warning btn-lg px-5" style="background:#e67e22; border:none;">Ödeme Yap</a>
                </div>
            }
        </div>
    </div>
</div> 